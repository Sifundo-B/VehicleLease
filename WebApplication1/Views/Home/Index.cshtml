@{
    ViewBag.Title = "Vehicle Leasing Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .nav-card {
        border: 1px solid #dee2e6;
        border-radius: 10px;
        padding: 30px;
        margin: 15px;
        text-align: center;
        transition: box-shadow 0.2s ease;
        background-color: #f8f9fa;
    }

        .nav-card:hover {
            box-shadow: 0 0 10px rgba(0,0,0,0.15);
            background-color: #ffffff;
        }

    .nav-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 30px;
        padding: 40px;
    }

    .nav-card a {
        text-decoration: none;
        color: #007bff;
        font-size: 18px;
        font-weight: 600;
    }

    .nav-title {
        text-align: center;
        font-size: 28px;
        font-weight: 600;
        margin-bottom: 20px;
        color: #333;
    }
</style>

<div class="container">
    <h2 class="nav-title">Vehicle Leasing Management System</h2>
    <div class="nav-grid">
        <div class="nav-card">
            <a href="@Url.Action("Index", "Vehicles")">🚗 Manage Vehicles</a>
        </div>
        <div class="nav-card">
            <a href="@Url.Action("Index", "Suppliers")">🏭 Manage Suppliers</a>
        </div>
        <div class="nav-card">
            <a href="@Url.Action("Index", "Branches")">🏢 Manage Branches</a>
        </div>
        <div class="nav-card">
            <a href="@Url.Action("Index", "Clients")">👔 Manage Clients</a>
        </div>
        <div class="nav-card">
            <a href="@Url.Action("Index", "Drivers")">👨‍✈️ Manage Drivers</a>
        </div>
        <div class="nav-card">
            <a href="@Url.Action("Index", "Reports")">📊 View Reports</a>
        </div>
    </div>
</div>
